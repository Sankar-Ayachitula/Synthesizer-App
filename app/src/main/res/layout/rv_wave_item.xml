<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp">

    <!-- Wave Frequency Label -->
    <TextView
        android:id="@+id/wave_frequency_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wave Frequency (Hz)"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Main Frequency Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/freq_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="440"
        android:valueFrom="20"
        android:valueTo="1000"
        app:trackColorActive="@color/orange"
        app:trackColorInactive="@color/orange"
        app:thumbColor="@color/orange"
        app:haloColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/wave_frequency_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LFO Label -->
    <TextView
        android:id="@+id/lfo_frequency_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LFO Frequency (Hz)"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/freq_slider"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- LFO Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/lfo_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="1"
        android:valueFrom="0"
        android:valueTo="2"
        app:trackColorActive="@color/orange"
        app:trackColorInactive="@color/orange"
        app:thumbColor="@color/orange"
        app:haloColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/lfo_frequency_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ********** 2x2 Wave Type Buttons ********** -->

    <!-- Sine -->
    <Button
        android:id="@+id/btnSine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sine"
        android:textAllCaps="false"
        android:background="@drawable/wave_button_selector"
        android:textColor="@color/orange"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lfo_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnTriangle"
        app:layout_constraintBottom_toTopOf="@id/btnSquare"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Triangle -->
    <Button
        android:id="@+id/btnTriangle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Triangle"
        android:textAllCaps="false"
        android:background="@drawable/wave_button_selector"
        android:textColor="@color/orange"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/lfo_slider"
        app:layout_constraintStart_toEndOf="@id/btnSine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSawtooth"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Square -->
    <Button
        android:id="@+id/btnSquare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Square"
        android:textAllCaps="false"
        android:background="@drawable/wave_button_selector"
        android:textColor="@color/orange"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnSine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSawtooth"
        app:layout_constraintHorizontal_weight="1" />

    <!-- Sawtooth -->
    <Button
        android:id="@+id/btnSawtooth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sawtooth"
        android:textAllCaps="false"
        android:background="@drawable/wave_button_selector"
        android:textColor="@color/orange"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnTriangle"
        app:layout_constraintStart_toEndOf="@id/btnSquare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
